import java.util.Scanner;
public class SequenceThingy {
  private int count = 1;
  
  Scanner scan = new Scanner(system.in);
  
  System.out.println("Enter starting int");
  private int n;
  n = scan.nextInt();
  
  while (n != 1){
    count++;
    if (n%2 == 0)
      n = n/2;
    else
      n = n*3 + 1;
  }
  System.out.print(count);
}